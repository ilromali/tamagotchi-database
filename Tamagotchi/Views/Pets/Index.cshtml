<h1>Your Pets</h1>
@* <p> your pet name is :@Model.Name</p> *@
@* <p>@Model.Life</p> *@

@if (Model.Count == 0)
{
    <p>There are no items in the list.</p>
}
<ul>
    @foreach (Pet pet in Model)
    {
        <li><a href='/pets/@pet.Id'>@pet.Name</a></li>
       
    }
</ul>

