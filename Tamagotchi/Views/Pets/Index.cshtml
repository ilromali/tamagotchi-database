@{
    Layout = "_Layout";  
}
@using Tamagotchi.Models;
@model List<Tamagotchi.Models.Pet>;

<h1>Your Pets</h1>

@if (Model.Count == 0)
{
    <p>There are no items in the list.</p>
}
<ul>
    @foreach (Pet pet in Model)
    {
        @* <li><a href='/pets/@pet.Id'>@pet.Name</a></li> *@
        <li>@Html.ActionLink($"{pet.Name}", "Details", new { id = pet.Id })</li>       
    }
</ul>
<h3>@Html.ActionLink("Add new pet", "Create")</h3>